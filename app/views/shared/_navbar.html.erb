<div class="navbar navbar-expand-sm navbar-light py-3 navbar-smartrecipes">
  <div class="container-fluid">
     <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo.svg", alt: "Smart Recipes logo", class: "logo-img" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <span class="nav-link">
          <%= current_user.username %>
          <%= link_to destroy_user_session_path, data: {turbo_method: :delete}, class: "ms-2 text-decoration-none" do %>
          <i class="fas fa-sign-out-alt text-dark"></i>
          <% end %>
          <span class="border-start border-2 mx-2"></span>
          <%= link_to chats_path, class: "ms-2 text-decoration-none" do %>
          <i class="fas fa-home text-dark"></i>
          <% end %>
          </span>
        <% else %>
          <% unless current_page?(new_user_session_path) || current_page?(new_user_registration_path) %>
            <li class="nav-item">
              <%= link_to "Login", new_user_session_path, class: "nav-button text-decoration-none" %>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
