<%= turbo_stream_from @chat %>
<div class="text-center d-flex flex-column align-items-center container-section">

  <div class='chat-container container m-4' id='chat_title'>
    <h1><%= @chat.title %></h1>
    <%= link_to "Home", chats_path, class: 'btn btn-warning mb-3' %>
  </div>
  <div class="container m-4">
      <div class="card p-3 d-flex" id='new_message'>
        <%= render 'messages/form', chat: @chat, message: Message.new %>
    </div>
  </div>
  <div class="container mt-3" id='messages'>
  <%= render 'messages/messages' , messages: @chat.messages.visible%>
  </div>
</div>
