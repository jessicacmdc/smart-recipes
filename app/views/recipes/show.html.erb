<div id="recipes" class="container shadow-sm position-relative my-4 bg-white rounded-5 p-0 "  style="height: 80vh;  overflow: hidden">
  <div class="my-2 text-center  p-4 row d-flex justify-content-center align-items-center" style="height: 90px" >
    <h1 class="fw-bold" style="font-family:'Pacifico', cursive;"><%= @recipe.title %></h1>
  </div>
  <div class="row px-5">
      <div class="col-3">
      <img src="<%= @category_img %>"  class="rounded-5 mb-4" alt="food" style="height: 350px; width: 230px">
    </div>
    <div class="row  col-9">
        <div class="col-4 text-start lh-1 d-flex flex-column  justify-content-start align-items-start">
        <h5 class="pb-2" style="font-family:'Pacifico', cursive;">ingredients:</h5>
        <% @recipe.ingredients.each do |ingredient| %>
        <p ><%=ingredient["item"] %>:<%=ingredient["amount"]%></p>
        <%end%>
      </div>
      <div class="col-8 d-flex flex-column justify-content-start align-items-start">
        <h5 class="mx-4" style="font-family:'Pacifico', cursive;">instruction:</h5>
        <p class="text-start lh-lg mx-4" style="white-space: pre-line;"><%= @recipe.instruction %></p>
      </div>

    </div>

  </div>
    <ul class="list-unstyled position-absolute d-flex bottom-0 justify-content-between align-items-center w-100 bg-black text-white m-0"
    style="height: 60px; padding: 0 1rem;">
      <li >category: <%= @recipe.category %></li>
      <li >required time: <%= @recipe.required_time %></li>
      <li >difficulty level: <%= @recipe.difficulty_level %></li>
      <li >serves: <%=@recipe.serves %></li>
    </ul>

</div>
